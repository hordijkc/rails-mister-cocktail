<div class="logo"></div>

<h1><div>Cocktails Today</h1></div>

<ul>
  <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail.name, cocktail_path(cocktail)  %>
          <div class="card-product">
      <%= link_to new_cocktail_dose_path(cocktail) do %>
        <i class="fas fa-blender"></i>
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg">
      <% end %>

        <ol>
        <% cocktail.doses.each do |dose| %>
          <div class="card-product-infos">

            <span><%= dose.description  %> - <%= dose.ingredient.name %></span>
            <%= link_to dose_path(dose), method: "delete" do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
        <% end %>


    </div>
    </ol>
  <% end %>
</ul>


<div class="card-product">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg">
  <div class="card-product-infos">
    <h1><%= link_to "Add a cocktail", new_cocktail_path %></h2>
    <p>Your guilty pleasure <strong>cocktail</strong></p>
  </div>

  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
</div>
