<h1>Cocktails Today</h1>

<ul>
  <% @cocktails.each do |cocktail| %>
    <li>
      <%= link_to cocktail.name, cocktail_path(cocktail)  %>
      <%= link_to new_cocktail_dose_path(cocktail) do %>
        <i class="fas fa-blender"></i>
      <% end %>

      <ul>
        <% cocktail.doses.each do |dose| %>
          <li>
            <span><%= dose.description  %> - <%= dose.ingredient.name %></span>
            <%= link_to dose_path(dose), method: "delete" do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>

<h1><%= link_to "Add a cocktail", new_cocktail_path %></h1>
